{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["es6", "es2016", "es2017", "dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
